/* pages/order/detail/detail.wxss */

.topStatus {
   background-color: #ff538a;
   color: white;
   display: flex;
   align-items: center;
   font-size: 28px;
   padding: 12px 0 60px 12px;
   margin-bottom: -40px;
}

.topStatus image {
   width: 27px;
   height: 27px;
   margin-right: 7px;
}

.block {
   margin: 0 14px 14px 14px;
   border-radius: 5px;
}

.shipping {
   padding: 0 10px;
}

.shipping .icon {
   width: 20px;
   height: 20px;
   margin-right: 15px;
   flex-shrink: 0;
   align-self: center;
}

.shipping .part {
   display: flex;
   align-items: center;
   padding: 15px 0;
}

.shipping .express {
   padding-left: 6px;
   padding-right: 30px;
}

.shipping .express .status {
   margin-bottom: 5px;
}

.shipping .express .time {
   color: #888;
   font-size: 12px;
}

.shipping .address .right>view:not(:last-child) {
   margin-bottom: 5px;
}

.address.part {
   padding-left: 6px;
}

.goodsList {
   padding: 6px 0;
}

.goods {
   display: flex;
   padding: 6px 12px;
   align-items: center;
}

.goods .thumb {
   width: 90px;
   height: 90px;
   margin-right: 15px;
   flex-shrink: 0;
}

.goods .right {
   display: flex;
   flex-direction: column;
   justify-content: space-between;
}

.goods .above {
   display: flex;
   margin-bottom: 10px;
}

.goods .title {
   font-size: 16px;
   margin-right: 30px;
   line-height: 22px;
   height: 44px;
   overflow: hidden;
}

.goods .price {
   color: #ff4e87;
   font-size: 15px;
}

.goods .below {
   color: #888;
   display: flex;
   justify-content: space-between;
   font-size: 14px;
}

.orderInfo {
   display: flex;
   padding: 15px 12px;
}

.orderInfo::before {
   content: "";
   display: block;
   width: 14px;
   height: 14px;
   border: 1px solid #e2e2e2;
   border-radius: 50%;
   background-color: #f7f7f7;
   align-self: top;
   margin-top: 4px;
   margin-right: 5px;
   flex-shrink: 0;
   box-sizing: border-box;
}

.orderInfo .left {
   line-height: 22px;
   color: #252525;
}

.orderInfo .left text {
   display: block;
   line-height: 22px;
}

.orderInfo .status {
   font-size: 17px;
   color: #ff4e87;
   flex: 1;
   align-self: center;
   white-space: nowrap;
   text-align: right;
}

.nums {
   padding: 15px 12px;
   display: flex;
   justify-content: flex-end;
   font-size: 15px;
   text-align: right;
}

.nums .tableCell:first-of-type {
   color: #888;
}

.nums .tableCell:last-of-type {
   color: #888;
}

.nums .tableCell.price:last-of-type {
   color: #ff4e87;
   font-size: 16px;
}

.actions {
   display: flex;
   justify-content: flex-end;
   padding: 15px 12px;
}

.actions button {
   border-radius: 3px;
   border: 1px solid #888;
   padding: 3px 6px;
   font-size: 15px;
   background-color: transparent;
   margin: 0;
}

.actions button:not(:first-child) {
   margin-left: 10px;
}

.actions button.main {
   color: #ff4e87;
   border-color: #ff4e87;
}

.contact {
   display: flex;
   justify-content: center;
   margin: 10px 0 20px 0;
}

.contact button {
   padding: 2px 20px;
   color: #888;
   font-size: 16px;
   display: flex;
   align-items: center;
   margin: 0;
}

.contact image {
   margin-right: 5px;
}

.wechat image {
   width: 20px;
}

.phone image {
   width: 17px;
}

.phone:before {
   background-color: #d2d2d2;
}

#buyAgain .head {
   padding: 15px;
   font-size: 17px;
}

#buyAgain .wrap {
   border-top-left-radius: 5px;
   border-top-right-radius: 5px;
}

#buyAgain .goodsList {
   padding: 0 12px;
}

#buyAgain .goods {
   padding: 12px 0;
   position: relative;
   overflow: hidden;
}

#buyAgain .againBts {
   display: flex;
   height: 70px;
   width: 100%;
   position: fixed;
   left: 0;
   bottom: 0;
   background-color: white;
   z-index: 200;
   box-sizing: border-box;
   padding: 12px;
   align-items: stretch;
}

#buyAgain .againBts button {
   flex: 1;
   border-radius: 5px;
   display: flex;
   margin: 0;
   justify-content: center;
   align-items: center;
}

#buyAgain .againBts .ok {
   color: white;
   margin-right: 12px;
   background-color: #ff538a;
}

#buyAgain .cancle {
   background-color: #fbfafc;
   color: #353535;
}

#buyAgain .body {
   padding-bottom: 70px;
}

#buyAgain .over {
   filter: grayscale(100%);
}

#buyAgain .over::before {
   content: "";
   color: white;
   background-color: #353535;
   position: absolute;
   transform: rotate(45deg);
   width: 100px;
   line-height: 20px;
   text-align: center;
   right: -44px;
   top: -30px;
   display: block;
   padding-top: 50px;
}

#buyAgain .over.down::before {
   content: "已下架";
}

#buyAgain .over.empty::before {
   content: "已售罄";
}

#buyAgain .over .price {
   visibility: hidden;
}
