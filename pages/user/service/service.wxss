/* pages/user/service/service.wxss */

text, button, navigator {
   font-size: 16px;
}

text {
   display: block;
}

.chat image {
   width: 24px;
   height: 24px;
   margin-right: 15px;
}

.chat {
   padding-left: 12px;
   color: #575757;
   margin-bottom: 12px;
}

.chat button {
   color: inherit;
}

.chat .row {
   display: flex;
   align-items: center;
}

.quests .head {
   color: #333;
}

.row {
   padding: 15px 0;
}

.quests {
   padding-left: 12px;
}

.quests .more {
   background-position: calc(100% - 15px) center;
   color: #8f8f8f;
}
